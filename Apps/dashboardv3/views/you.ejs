<div class="sidenav-header">
  <p class='sidenav-header-title'>APPS</p>
  <p class="sidenav-header-link"><a href="allApps" data-id="allApps" class="orange iframeLink">see all</a></p>
</div>
<div class="installed-apps sidenav-items">
  <ul>
    <% for (var i = 0; i < map.length; i++) { %>
      <li>
        <p><a href="<%= map[i].externalUri %>" class="iframeLink" data-id="<%= map[i].id %>"><%= map[i].title %></a></p>
        <div class="app-details">
          created by <%= map[i].author || "Singly, Inc." %><br />
          <a class="orange" href="<%= map[i].github || "https://www.github.com/LockerProject/Locker" %>">view code on GitHub</a>
        </div>
      </li>
    <% } %>
  </ul>
  <p><a class="orange" href="#">Explore more apps</a></p>
</div>
<div class="sidenav-header">
  <p class='sidenav-header-title'>YOUR SERVICES</p>
</div>
<div class="sidenav-items synclets">
  <% for (var i = 0; i < connectors.length; i++) { %>
    <% if (connectors[i].repository.hidden) continue; %>
    <% if (!connectors[i].authed) { %><a href="/auth/<%=connectors[i].repository.handle %>" data-provider='<%= connectors[i].repository.handle %>'
        data-width='<%=connectors[i].oauthSize.width%>' data-height='<%=connectors[i].oauthSize.height%>' class="oauthLink"><% } %>
    <img class='<%=(connectors[i].authed ? "installed" : "")%>' src="img/icons/32px/<%= connectors[i].repository.handle %>.png">
    <% if (!connectors[i].authed) { %></a><% } %>
  <% } %>
</div>
<% if (firstVisit === false) { %>
  <div id="firstvisit-overlay">
    <div class="content">
      When you want to connect more services, click on the logo under "Your Services", or go to your "Account Settings" page.
    </div>
    <div class="action">
      <img class="gotit-button" src="img/got-it.png" />
    </div>
  </div>
<% } %>
